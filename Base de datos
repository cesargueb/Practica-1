library(rvest)
url="https://www.congreso.gob.pe/pleno/congresistas/"
congreso=read_html(url)

css_NOMBRES="a.conginfo"
NOMBRES_html <- html_nodes(congreso,css_NOMBRES)
NOMBRES_texto <- html_text(NOMBRES_html)
head(NOMBRES_texto)

css_GRUPO="span.partidolist"
GRUPO_html <- html_nodes(congreso,css_GRUPO)
GRUPO_texto <- html_text(GRUPO_html)
head(GRUPO_texto)

data1 <- data.frame("CONGRESISTA" = NOMBRES_texto, "GRUPO PARLAMENTARIO" = GRUPO_texto)
head(data1)


url="https://www.gob.pe/institucion/mpfn/funcionarios"
minpub=read_html(url)

css_nombre="h3.h.is-6.link.link--read-more-inline.is-bold"
nombre_html <- html_nodes(minpub,css_nombre)
nombre_texto <- html_text(nombre_html)
head(nombre_texto)

css_cargo="h3.font-light.mb-6"
cargo_html <- html_nodes(minpub,css_cargo)
cargo_texto <- html_text(cargo_html)
head(cargo_texto)

data2 <- data.frame(NOMBRE = nombre_texto, CARGO = cargo_texto)
head(data2)
